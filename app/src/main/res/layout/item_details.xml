    <TextView
        android:id="@+id/item_posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:text="Posted on:"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_posted_by" />

    <TextView
        android:id="@+id/item_posted_on_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:text="1st Jan, 21 at 10:10:15"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toEndOf="@id/item_posted_on"
        app:layout_constraintTop_toBottomOf="@+id/item_posted_by" />

    <TextView
        android:id="@+id/item_instructions_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:background="@drawable/edit_text_border"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="4"
        android:text="No instructions provided"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_posted_on" />

</androidx.constraintlayout.widget.ConstraintLayout>